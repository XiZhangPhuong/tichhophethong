<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/red">

        <ImageView
            android:id="@+id/img_return_received"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/ic_back_24" />

        <TextView
            android:id="@+id/txt_ancucuc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đang giao"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textSize="18dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_driver_received"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Đang giao"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txt_adg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Tài xế đang giao hàng , bạn có thể liên hệ với tài xế"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txt_phone_driver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Sdt : 0973942530"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txt_car_driver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Loại xe : SH-Mode"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="15dp"
                android:textSize="15dp" />



        </LinearLayout>


        <Button
            android:id="@+id/btn_contact_driver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/red"
            android:text="Liên hệ tài xế"
            android:textAllCaps="false"
            android:layout_alignParentBottom="true"
            android:textStyle="normal"
            android:background="@drawable/custom_button"
            android:textSize="15dp" />

    </RelativeLayout>

</LinearLayout>