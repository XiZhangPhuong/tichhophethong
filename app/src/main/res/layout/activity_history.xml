<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_tea"
    android:orientation="vertical"
    tools:context=".Activity.HistoryActivity">


    <RelativeLayout
        android:id="@+id/relative_history"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/red"
        >

        <ImageView
            android:id="@+id/img_return_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/ic_back_24" />

        <TextView
            android:id="@+id/textVidew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Lịch sử đơn hàng"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:textSize="18dp" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


           <LinearLayout
               android:id="@+id/linear_history_food"
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:layout_height="wrap_content">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <TextView
                       android:id="@+id/txt_sizeListHistory"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textSize="15dp"
                       android:layout_marginTop="10dp"
                       android:layout_marginLeft="10dp"
                       android:textColor="@color/black"
                       android:layout_weight="1"
                       android:text="Có 3 sản phẩm trong mục yêu thích" />

                   <TextView
                       android:id="@+id/txt_delete_items_history"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textSize="15dp"
                       android:layout_marginTop="10dp"
                       android:textColor="@color/red"
                       android:layout_weight="2"
                       android:gravity="right"
                       android:layout_marginRight="10dp"
                       android:text="Xóa tất cả" />

               </LinearLayout>

               <androidx.recyclerview.widget.RecyclerView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="20dp"
                   android:id="@+id/rcv_history_food"/>

           </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_history_empty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/image_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white_tea"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="7dp"
                    app:srcCompat="@drawable/ic_baseline_keyboard_backspace_24" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white_tea"
                    android:layout_marginTop="50dp"
                    app:srcCompat="@drawable/giohang" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:text="Lịch sử đơn hàng của bạn trống" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>