<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="12dp"
    android:layout_marginTop="1dp"
    android:backgroundTint="@color/white"
    >

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <ImageView
           android:id="@+id/img_cart_photo"
           android:layout_width="150dp"
           android:layout_height="100dp"
           android:scaleType="centerCrop"
           app:srcCompat="@drawable/comchientrung" />

       <TextView
           android:id="@+id/tv_name_cart"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Cơm chiên trứng"
           android:textColor="@color/black"
           android:layout_toRightOf="@id/img_cart_photo"
           android:layout_marginTop="5dp"
           android:layout_marginLeft="5dp"
           android:textSize="18dp"
           />

       <TextView
           android:id="@+id/tv_name_inf_cart"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Cơm"
           android:textSize="15dp"
           android:layout_below="@id/tv_name_cart"
           android:layout_toRightOf="@id/img_cart_photo"
           android:layout_marginTop="5dp"
           android:layout_marginLeft="5dp"
           />

       <TextView
           android:id="@+id/tv_total_item"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="2500000"
           android:textColor="@color/red"
           android:textSize="18dp"
           android:layout_below="@id/tv_name_inf_cart"
           android:layout_toRightOf="@id/img_cart_photo"
           android:layout_marginTop="5dp"
           android:layout_marginLeft="5dp"
           />

       <ImageView
           android:id="@+id/imb_plus_cart"
           android:layout_width="wrap_content"
           android:layout_height="24dp"
           android:layout_alignParentRight="true"
           android:layout_marginTop="58dp"
           android:layout_marginRight="10dp"
           app:srcCompat="@drawable/daucong" />

       <TextView
           android:id="@+id/tv_number_cart"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="3"
           android:textColor="@color/black"
           android:layout_marginRight="10dp"
           android:layout_marginTop="58dp"
           android:layout_toLeftOf="@id/imb_plus_cart"
           android:textSize="18dp" />

       <ImageView
           android:id="@+id/imb_minus_cart"
           android:layout_width="wrap_content"
           android:layout_height="24dp"
           android:layout_marginRight="10dp"
           android:layout_marginTop="58dp"
           android:layout_toLeftOf="@id/tv_number_cart"
           app:srcCompat="@drawable/dautru" />
   </RelativeLayout>


</androidx.cardview.widget.CardView>