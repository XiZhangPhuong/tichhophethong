<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_tea"
    tools:context=".Activity.CartActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">




            <LinearLayout
                android:id="@+id/linear_CartEmpty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_tea"
                android:orientation="vertical">


                <ImageButton
                    android:id="@+id/image_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white_tea"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="7dp"
                    app:srcCompat="@drawable/ic_back_24" />



                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white_tea"
                    android:layout_marginTop="50dp"
                    app:srcCompat="@drawable/giohang" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:text="Chưa có sản phẩm trong giỏ hàng" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_Cart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:background="@color/red">

                   <ImageView
                       android:id="@+id/img_return"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_centerVertical="true"
                       android:layout_marginLeft="10dp"
                       app:srcCompat="@drawable/ic_back_24" />

                   <TextView
                       android:id="@+id/textVidew"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Giỏ hàng của tôi"
                       android:textColor="@color/white"
                       android:gravity="center"
                       android:layout_centerVertical="true"
                       android:textSize="18dp" />

               </RelativeLayout>

                <TextView
                    android:id="@+id/tView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="Giao tới" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textSize="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:text="Đà Nẵng" />

                    <TextView
                        android:id="@+id/txt_change_address"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="2"
                        android:gravity="right"
                        android:text="Thay đổi"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/red"
                        android:textSize="15dp" />
                </LinearLayout>



                <EditText
                    android:id="@+id/edt_address"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="Địa chỉ cụ thể"
                    android:drawablePadding="10dp"
                    android:paddingStart="20dp"
                    android:textSize="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"

                    android:background="@drawable/custom_edt2"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    >

                    <TextView
                        android:id="@+id/txt_items"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textSize="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="Mặt hàng (2)" />

                    <TextView
                        android:id="@+id/txt_delete_items"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="2"
                        android:gravity="right"
                        android:text="Xóa tất cả"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/red"
                        android:textSize="15dp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_cartFood"
                    android:layout_width="match_parent"
                    android:layout_height="400dp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="100sp"
                        android:layout_height="30sp"
                        android:text="Tạm tính"
                        android:gravity="center"
                        android:textColor="#654C4C"
                        android:textSize="15dp"/>
                    <TextView
                        android:id="@+id/tv_subtotal_cart"
                        android:layout_width="200dp"
                        android:layout_height="30sp"
                        android:layout_marginRight="10sp"
                        android:gravity="end|center"
                        android:textSize="15dp"
                        android:text="10000"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="100sp"
                        android:layout_height="30sp"
                        android:layout_below="@id/tv_subtotal_cart"
                        android:layout_marginTop="10sp"
                        android:gravity="center"
                        android:text="Phí ship"
                        android:textColor="#654C4C"
                        android:textSize="15dp" />
                    <TextView
                        android:id="@+id/tv_delivery_cart"
                        android:layout_width="200dp"
                        android:layout_height="30sp"
                        android:gravity="end|center"
                        android:textSize="15dp"
                        android:layout_marginRight="10sp"
                        android:text="Free"
                        android:layout_marginTop="10sp"
                        android:layout_below="@id/tv_subtotal_cart"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="100sp"
                        android:layout_height="30sp"
                        android:text="Tổng tiền"
                        android:gravity="center"
                        android:layout_marginTop="10sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_below="@id/tv_delivery_cart"
                        android:textSize="18dp"/>
                    <TextView
                        android:id="@+id/tv_total_cart"
                        android:layout_width="200dp"
                        android:layout_height="30sp"
                        android:gravity="end|center"
                        android:textSize="18dp"
                        android:text="1350000"
                        android:layout_marginTop="10sp"
                        android:layout_below="@id/tv_delivery_cart"
                        android:layout_alignParentEnd="true"
                        android:textStyle="bold"
                        android:layout_marginRight="10sp"
                        android:textColor="@color/red"/>
                </RelativeLayout>


                <Button
                    android:id="@+id/btn_addTOCart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="0dp"
                    android:layout_marginTop="15dp"
                    app:backgroundTint="@color/red"
                    android:text="Xác nhận đặt hàng"
                    android:textAllCaps="false"
                    android:textStyle="normal"
                    android:background="@drawable/custom_button"
                    android:textSize="15dp" />

            </LinearLayout>



     <LinearLayout
         android:id="@+id/linear_waiting_driver"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@color/white_tea"
         android:orientation="vertical"
         >

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="50dp"
             android:background="@color/red">

             <ImageView
                 android:id="@+id/img_return_waiting"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="10dp"
                 android:layout_centerVertical="true"
                 app:srcCompat="@drawable/ic_back_24" />

             <TextView
                 android:id="@+id/textdsVidew"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="Đang đợi tài xế"
                 android:textColor="@color/white"
                 android:layout_centerVertical="true"
                 android:gravity="center"
                 android:textSize="18dp" />
         </RelativeLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:background="@color/white"
             >

             <TextView
                 android:id="@+id/txt_address_waiting"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:layout_marginTop="10dp"
                 android:layout_marginBottom="10dp"
                 android:textColor="@color/black"
                 android:text="Giao tới 135 Nguyễn Văn Linh"
                 android:textSize="15dp" />


         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"
             android:orientation="horizontal"
             >
             <TextView
                 android:id="@+id/txt_ad_waiting"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="left"
                 android:text="Vị trí"
                 android:layout_weight="1"
                 android:textSize="15dp" />

             <TextView
                 android:id="@+id/txt_ating"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="right"
                 android:text="Thay đổi"
                 android:gravity="right"
                 android:layout_weight="1"
                 android:textColor="@color/red"
                 android:textSize="15dp" />

         </LinearLayout>

         <TextView
             android:id="@+id/txt_adffdting"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="left"
             android:text="Đà Nẵng"
             android:layout_marginTop="5dp"
             android:layout_marginLeft="10dp"
             android:textColor="@color/black"
             android:textSize="15dp" />

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@color/red"
             android:layout_marginTop="10dp"
             android:orientation="vertical">

             <TextView
                 android:id="@+id/txt_ading"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="left"
                 android:text="Chờ xác nhận"
                 android:layout_marginTop="15dp"
                 android:textColor="@color/white"
                 android:layout_marginLeft="10dp"
                 android:textSize="15dp" />

             <TextView
                 android:id="@+id/txt_adg"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="left"
                 android:text="Tài xế sẽ liên hệ và nhận đơn , bạn có thể hủy đơn hàng này!"
                 android:layout_marginTop="15dp"
                 android:textColor="@color/white"
                 android:layout_marginLeft="10dp"
                 android:textSize="15dp" />

             <TextView
                 android:id="@+id/txt_time_wating"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="left"
                 android:text="16-11-2022 13:45"
                 android:layout_marginTop="15dp"
                 android:layout_marginBottom="10dp"
                 android:textColor="@color/white"
                 android:layout_marginLeft="10dp"
                 android:textSize="15dp" />

         </LinearLayout>



         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_marginTop="5dp"
             >

             <TextView
                 android:id="@+id/txt_items_cart_waiting"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:gravity="left"
                 android:textSize="15dp"
                 android:layout_marginTop="5dp"
                 android:layout_marginLeft="10dp"
                 android:layout_weight="1"
                 android:text="Đơn hàng của bạn ( 2) " />

             <TextView
                 android:id="@+id/txt_deletetems"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="10dp"
                 android:layout_marginTop="5dp"
                 android:layout_weight="1"
                 android:gravity="right"
                 android:text="Xem chi tiết"
                 android:layout_marginRight="10dp"
                 android:textColor="@color/red"
                 android:textSize="15dp" />
         </LinearLayout>


         <androidx.recyclerview.widget.RecyclerView
             android:id="@+id/rcv_cartFood_waiting"
             android:layout_width="match_parent"
             android:layout_height="300dp" />

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"
             android:layout_marginTop="20dp"
             android:orientation="horizontal"
             >
             <TextView
                 android:id="@+id/txt_adng"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="left"
                 android:text="Mã đơn hàng : "
                 android:layout_weight="1"
                 android:textColor="@color/black"
                 android:textSize="15dp" />

             <TextView
                 android:id="@+id/txt_id_order"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="right"
                 android:text="154000 VND"
                 android:gravity="right"
                 android:layout_weight="1"
                 android:textColor="@color/black"
                 android:textSize="15dp" />

         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"
             android:layout_marginTop="20dp"
             android:orientation="horizontal"
             >
             <TextView
                 android:id="@+id/txt_ad_wting"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="left"
                 android:text="Tổng thanh toán : "
                 android:layout_weight="1"
                 android:textColor="@color/black"
                 android:textSize="15dp" />

             <TextView
                 android:id="@+id/txt_total_waiting"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="right"
                 android:text="154000 VND"
                 android:gravity="right"
                 android:layout_weight="1"
                 android:textColor="@color/red"
                 android:textSize="15dp" />

         </LinearLayout>

         <Button
             android:id="@+id/btn_cancel_Cart"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="bottom"
             android:layout_marginBottom="0dp"
             android:layout_marginTop="15dp"
             app:backgroundTint="@color/red"
             android:text="Hủy bỏ đơn hàng"
             android:textAllCaps="false"
             android:textStyle="normal"
             android:background="@drawable/custom_button"
             android:textSize="15dp" />










     </LinearLayout>

    </LinearLayout>

</ScrollView>